	<update id="updatePbalance" parameterType="Point">
		UPDATE
				"USER"
			SET
				PBALANCE = #{pbalance}
		WHERE
				US_NO = #{usno}
	</update>
	
	<select id="selectAlertList" resultMap="AlertResultSet">
		SELECT *
		FROM NEWS
		WHERE US_NO = #{usno}
		AND NSTATUS = 'N'
		ORDER BY NNO DESC
	</select>
	
	<select id="selectYAlertList" resultMap="AlertResultSet">
		SELECT *
		FROM NEWS
		WHERE US_NO = #{usno}
		AND NSTATUS = 'Y'
		ORDER BY NNO DESC
	</select>
	
	<select id="selectDetailAlert" resultMap="AlertResultSet">
		SELECT *
		FROM NEWS N, POINT P, REPORT R, "QnA" Q, ALLIANCE A, BUSINESS B
		WHERE A.BUS_CODE = B.BUS_CODE(+)
		AND N.NKEYNO = P.PNO(+)
		AND N.NKEYNO = R.REPORT_NO(+)
		AND N.NKEYNO = Q.QNA_NO(+)
		AND N.NKEYNO = A.AL_NO(+)
		AND N.NNO = #{nno}
	</select>
	
	<update id="updateNstatus" parameterType="Alert">
		UPDATE NEWS
		SET NSTATUS = 'Y'
		WHERE NNO = #{nno}

	</update>
</mapper>